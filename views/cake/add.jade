extends ../layout/base
block content
    section.content-header
        h1
            | Tambah Cake 
           
    section.content
        .box
            .box-header.with-border
                
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/cake/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',value='#{nama}',name='nama',placeholder='Masukkan nama', autofocus).form-control
                                .form-group
                                    label
                                        | Stok
                                    input(type='text',name='stok',placeholder='Masukkan stok').form-control
                                .form-group
                                    label
                                        | Harga
                                    input(type='text',value='#{harga}',name='harga',placeholder='Masukkan harga').form-control
                                .form-group
                                    label
                                        | Ukuran
                                    input(type='text',name='ukuran',placeholder='Masukkan ukuran').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/cake').btn.btn-primary.pull-right
                                    | Back